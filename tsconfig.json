{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@qi/core": ["lib/src/index.ts"],
      "@qi/core/base": ["lib/src/qicore/base/index.ts"],
      "@qi/core/*": ["lib/src/qicore/*"],
      "@qi/mcp": ["lib/src/qimcp/client"],
      "@qi/dp/dsl": ["lib/src/dsl/index.ts"],
      "@qi/dp/dsl/*": ["lib/src/dsl/*"],
      "@qi/dp/actors/*": ["lib/src/actors/*"],
      "@qi/dp/actors/abstract/*": ["lib/src/actors/abstract/*"],
      "@qi/dp/actors/sources/*": ["lib/src/actors/sources/*"],
      "@qi/dp/actors/targets/*": ["lib/src/actors/targets/*"],
      "@qi/dp/base/*": ["lib/src/base/*"],
      "@qi/dp/generators/*": ["lib/src/generators/*"],
      "@qi/fp": ["lib/src/fp/index.ts"],
      "@qi/fp/*": ["lib/src/fp/*"],
      "@qi/fp/dsl": ["lib/src/fp/dsl/index.ts"],
      "@qi/fp/dsl/*": ["lib/src/fp/dsl/*"],
      "@qi/fp/market/*": ["lib/src/fp/market/*"]
    }
  },
  "include": ["lib/src/**/*", "tests/**/*", "app/**/*", "*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
