{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@qi/core": ["lib/src/index.ts"],
      "@qi/core/base": ["lib/src/qicore/base/index.ts"],
      "@qi/core/*": ["lib/src/qicore/*"],
      "@qi/dp/domain": ["lib/src/domain/index.ts"],
      "@qi/dp/domain/*": ["lib/src/domain/*"],
      "@qi/dp/market/crypto/sources": ["lib/src/market/crypto/actors/sources/index.ts"],
      "@qi/dp/market/crypto/sources/*": ["lib/src/market/crypto/actors/sources/*"],
      "@qi/dp/market/crypto/targets": ["lib/src/market/crypto/actors/targets/index.ts"],
      "@qi/dp/market/crypto/targets/*": ["lib/src/market/crypto/actors/targets/*"],
      "@qi/dp/market/multi-asset/sources": ["lib/src/market/multi-asset/actors/sources/index.ts"],
      "@qi/dp/market/multi-asset/sources/*": ["lib/src/market/multi-asset/actors/sources/*"],
      "@qi/dp/market/stock/sources": ["lib/src/market/stock/actors/sources/index.ts"],
      "@qi/dp/market/stock/sources/*": ["lib/src/market/stock/actors/sources/*"],
      "@qi/dp/dsl": ["lib/src/dsl/index.ts"],
      "@qi/dp/dsl/interfaces": ["lib/src/dsl/interfaces.ts"],
      "@qi/dp/dsl/*": ["lib/src/dsl/*"],
      "@qi/dp/utils": ["lib/src/utils/index.ts"],
      "@qi/dp/utils/*": ["lib/src/utils/*"]
    }
  },
  "include": ["lib/src/**/*", "lib/tests/**/*", "tests/**/*", "app/**/*", "*.ts"],
  "exclude": ["node_modules", "dist"]
}
